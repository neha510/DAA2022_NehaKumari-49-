#include<stdio.h>
int main()
{
    int a[100];
    int i,n,key;
    printf("enter size of array :");
    scanf("%d",&n);
    printf("enter elements :");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    printf("enter key to be searched :");
    scanf("%d",&key);
    for(i=0;i<n;i++)
    {
        if(a[i] == key)
          {
              printf("key is found at index %d",i);
              printf("\ntotal no of comparision is %d",i+1);
              
          }
        
    }
    return 0;
}    
